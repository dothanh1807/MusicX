<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.example.exercise2.view.customizeview.RipplePulseAnimation
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        ripple:rippleColor="@color/colorRipplePulse"
        ripple:rippleType="fill"
        ripple:strokeWidth="1dp"
        ripple:startRadius="1dp"
        ripple:endRadius="80dp"
        ripple:duration="1000"
        android:id="@+id/ripplepulse_splash"/>

    <com.example.exercise2.view.customizeview.Circle
        android:id="@+id/circle"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <ImageView
        android:id="@+id/imgSplash"
        android:layout_centerInParent="true"
        android:tint="@color/hightLight"
        android:src="@drawable/image_default"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/appName"
        android:layout_above="@+id/myName"
        android:textColor="@color/hightLight"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/myName"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/hightLight"
        android:layout_centerHorizontal="true"
        android:text="Nguyễn Đỗ Thanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>