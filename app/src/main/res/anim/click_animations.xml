<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:fromAlpha = "1"
        android:toAlpha = "0.5"
        android:duration = "500">
    </alpha>

    <scale
        android:fromXScale = "0.5"
        android:toXScale = "1"
        android:fromYScale = "0.5"
        android:toYScale = "1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration = "1000">
    </scale>

</set>